%h1 Login
= form_for @user_session, :url => {:action => "create"} do |f|
    =# f.error_messages
    %div
        = f.label :username
        = f.text_field :username, :size => 60
    %div
        = f.label :password
        = f.password_field :password, :size => 60
    %div
        = f.check_box :remember_me
        = f.label :remember_me
    %div
        = f.submit "Login"
    %div
        %i Please enter Windows login and password