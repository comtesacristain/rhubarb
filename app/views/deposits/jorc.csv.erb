<%#TODO: Add inclusive field, commodity field as well possibly%>
<%- headers = ["ENO", "NAME", "STATE","LONGITUDE","LATITUDE","RECORDDATE", "TONNAGE", "GRADE", "COMMODITY",
  "INCLUSIVE","PVR_ORE","PVR_GRADE","PVR_MINERAL","PBR_ORE","PBR_GRADE","PBR_MINERAL","PPR_ORE","PPR_GRADE","PPR_MINERAL",
  "MRS_ORE","MRS_GRADE","MRS_MINERAL","IDR_ORE","IDR_GRADE","IDR_MINERAL","MID_ORE","MID_GRADE","MID_MINERAL",
  "IFR_ORE","IFR_GRADE","IFR_MINERAL","OTHER_ORE","OTHER_GRADE","OTHER_MINERAL"]-%>
<%= raw CSV.generate_line headers, :row_sep => "\r" -%>
<%- @deposits.each do |deposit| -%>
<%- deposit_row = [deposit.eno, deposit.entityid, deposit.deposit_status.state,deposit.longitude,deposit.latitude]-%>
<%- resources = deposit.resources.merge(Resource.year(@year).nonzero).all -%>
<%- if resources.empty? -%>
<%- row = deposit_row-%>
<%= raw CSV.generate_line row, :row_sep => "\r" -%>
<%- else -%>
<%- resources_row = build_jorc(resources) -%>
<%- row = deposit_row + resources_row-%>
<%= raw CSV.generate_line row, :row_sep => "\r" -%>
<%- end -%>
<%- end -%> 
