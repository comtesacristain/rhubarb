%h2 Download
%p
    - if params[:action] =="resources"
        =link_to image_tag( 'csv64.png', :title => "Download CSV", :alt => "Download CSV"), url_for(params.merge(:format=>:csv))
    - elsif params[:action] =="quality_check"
        = link_to image_tag( 'xls64.png', :title => "Download Excel Spreadsheet", :alt => "Download Excel Spreadsheet"), url_for(params.merge(:format=>:xls))
    - else
        =link_to image_tag( 'csv64.png', :title => "Download CSV", :alt => "Download CSV"), url_for(params.merge(:format=>:csv))
        =link_to image_tag( 'kml64.png', :title => "Download KML", :alt => "Download KML"), url_for(params.merge(:format=>:kml))